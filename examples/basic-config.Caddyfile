# Basic GFWReport Plugin Configuration
# This example shows the minimal configuration needed to use the gfwreport plugin

{
	# Order the gfwreport plugin in the middleware chain
	order gfwreport before file_server
}

localhost:8080 {
	# Enable the gfwreport plugin with pattern file only
	gfwreport {
		# Path to the malicious patterns file
		file docker/report.txt
	}
	
	# Serve static files from current directory
	file_server
}
